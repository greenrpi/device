import board
import neopixel
import time
import random

pixels = neopixel.NeoPixel(board.D12, 30)
while True:
    pixels[0] = (random.randint(5,250), random.randint(5,250), random.randint(5,250))
    pixels[1] = (random.randint(5,250), random.randint(5,250), random.randint(5,250))
    pixels[2] = (random.randint(5,250), random.randint(5,250), random.randint(5,250))
    pixels[3] = (random.randint(5,250), random.randint(5,250), random.randint(5,250))
    time.sleep(0.2)

